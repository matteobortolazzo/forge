{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Scheduler": {
    "Enabled": true,
    "PollingIntervalSeconds": 5,
    "DefaultMaxRetries": 3
  },
  "Pipeline": {
    "MaxImplementationRetries": 3,
    "MaxSimplificationIterations": 2,
    "ConfidenceThreshold": 0.7,
    "WorktreeIsolation": true,
    "SequentialSubtasks": true,
    "HumanGates": {
      "Split": "conditional",
      "Planning": "conditional",
      "Pr": "mandatory"
    }
  }
}
